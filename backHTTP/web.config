<configuration>
  <system.webServer>

    <iisnode node_env="%node_env%" loggingEnabled="true" enableXFF="true" />
    <!-- indicates that the www.js file is a node.js application 
    to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="www.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <rule name="SocketIO-pattern" patternSyntax="ECMAScript">
            <match url="socket.io/*"/>
            <action type="Rewrite" url="www.js"/>
        </rule>
        <rule name="SocketIO" patternSyntax="ECMAScript">
            <match url="socket.io.+"/>
            <action type="Rewrite" url="www.js"/>
        </rule>
        <rule name="myapp">
          <match url="/*" />
          <action type="Rewrite" url="www.js" />
        </rule>
      </rules>
    </rewrite>
    <security>
       <requestFiltering>
         <hiddenSegments>
           <add segment="node_modules" />
         </hiddenSegments>
       </requestFiltering>
     </security>

  </system.webServer>
</configuration>
